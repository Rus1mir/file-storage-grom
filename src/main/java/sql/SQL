CREATE TABLE STORAGES (
    ID NUMBER,
    CONSTRAINT STORAGE_PK PRIMARY KEY (ID),
    FORMAT_SUPPORTED NVARCHAR2(200) NOT NULL,
    STORAGE_COUNTRY NVARCHAR2(20) DEFAULT 'USA' NOT NULL,
    MAX_SIZE NUMBER NOT NULL
);

CREATE TABLE FILES (
    ID NUMBER,
    CONSTRAINT FILE_PK PRIMARY KEY (ID),
    NAME NVARCHAR2(20) NOT NULL,
    FORMAT NVARCHAR2(20) NOT NULL,
    FILE_SIZE NUMBER NOT NULL,
    STORAGE_ID NUMBER,
    CONSTRAINT STORAGE_FK FOREIGN KEY (STORAGE_ID) REFERENCES STORAGES(ID)
);

CREATE SEQUENCE STORAGE_SEQ
    MINVALUE 1
    START WITH 1
    INCREMENT BY 1
    CACHE 20;

 CREATE SEQUENCE FILE_SEQ
    MINVALUE 1
    START WITH 1
    INCREMENT BY 1
    CACHE 20;
